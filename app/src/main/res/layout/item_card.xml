<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:tint="@color/background_tint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/card_bg" />

        <TextView
            android:id="@+id/txt_cardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/WhiteTextAppearance"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txt_valid"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_cardChip"
            tools:text="XXXX XXXX XXXX 1234" />

        <ImageView
            android:id="@+id/img_cardVendor"
            android:layout_width="64dp"
            android:layout_height="42dp"
            android:layout_marginEnd="32dp"
            android:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_cardType"
            app:srcCompat="@drawable/visa_card_logo" />

        <TextView
            android:id="@+id/txt_cardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="debit"
            android:textAppearance="@style/WhiteTextAppearance"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txt_cardNumber"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_cardHolderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:textAppearance="@style/WhiteTextAppearance"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_deleteCard"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txt_cardNumber"
            app:layout_constraintTop_toBottomOf="@+id/txt_cardNumber"
            tools:text="Tayo Oluwatimitlehin" />

        <TextView
            android:id="@+id/txt_cardExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textAppearance="@style/WhiteTextAppearance"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/img_cardVendor"
            app:layout_constraintTop_toBottomOf="@+id/img_cardVendor"
            tools:text="05/23" />

        <TextView
            android:id="@+id/txt_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="VALID\nTILL"
            android:textAppearance="@style/ExtraLightTextAppearance"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/txt_cardExpiry"
            app:layout_constraintTop_toTopOf="@+id/txt_cardExpiry" />

        <ImageView
            android:id="@+id/img_cardChip"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/txt_cardType"
            app:layout_constraintTop_toBottomOf="@+id/txt_cardType"
            app:srcCompat="@drawable/card_chip" />

        <ImageView
            android:id="@+id/img_emptyView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="32dp"
            android:tint="@color/white"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/background"
            app:srcCompat="@drawable/ic_add" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_deleteCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:tint="@color/colorDark"
            app:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_delete_buttoon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>